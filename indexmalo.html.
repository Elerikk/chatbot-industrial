# Generar un nuevo index.html con estilo de respuesta resaltado aplicado dinámicamente en cada respuesta del bot

html_resaltado = """
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>ChatBot con Respuestas Resaltadas</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
      background-color: #f2f2f2;
      display: flex;
      flex-direction: column;
      height: 100vh;
    }

    h2 {
      text-align: center;
      padding: 10px;
      margin: 0;
    }

    #chatbox {
      background: #fff;
      border: 1px solid #ccc;
      border-radius: 10px;
      padding: 10px;
      margin: 10px;
      white-space: pre-line;
      max-width: 95%;
      flex: 1;
      overflow-y: auto;
    }

    .respuesta-bot {
      background-color: #e9f3ff;
      border-left: 4px solid #007bff;
      padding: 8px 12px;
      margin: 8px 0;
      border-radius: 5px;
      font-weight: 500;
    }

    .fixed-bottom {
      background: #f2f2f2;
      padding: 10px;
      border-top: 1px solid #ccc;
    }

    .buttons-container {
      display: flex;
      flex-wrap: wrap;
      gap: 5px;
      justify-content: center;
      margin-bottom: 10px;
    }

    .option-btn {
      padding: 8px 14px;
      font-size: 14px;
      border: none;
      border-radius: 5px;
      background-color: #007bff;
      color: white;
      cursor: pointer;
    }

    #manualInput {
      display: flex;
      gap: 5px;
      justify-content: center;
    }

    #manualInput input {
      padding: 8px;
      font-size: 14px;
      width: 60%;
    }

    #manualInput button {
      padding: 8px 14px;
      font-size: 14px;
    }
  </style>
</head>
<body>

  <h2>Bienvenido al ChatBot de Ingeniería Civil Industrial 👷‍♂️</h2>

  <div id="chatbox">
<div class="respuesta-bot">🤖 ¿En qué te puedo ayudar?<br>
1. Información general de la carrera<br>
2. Preguntas Frecuentes (FAQ)<br>
3. Otros<br>
4. Salir</div>
  </div>

  <div class="fixed-bottom">
    <div class="buttons-container" id="buttonsContainer">
      <button class="option-btn" onclick="responder('1')">1</button>
      <button class="option-btn" onclick="responder('2')">2</button>
      <button class="option-btn" onclick="responder('3')">3</button>
      <button class="option-btn" onclick="responder('4')">4</button>
    </div>

    <div id="manualInput">
      <input type="text" id="userInput" placeholder="Escribe el número de opción aquí...">
      <button onclick="responderManual()">Enviar</button>
    </div>
  </div>

  <script>
    function responder(opcion) {
      const chatbox = document.getElementById("chatbox");
      let respuesta = "";

      if (opcion === "1") {
        respuesta = "<div class='respuesta-bot'>👷‍♂️ Perfil de egreso: Profesional capacitado para liderar procesos organizacionales, con fuerte base en ingeniería, gestión y responsabilidad social.</div>";
      } else if (opcion === "2") {
        respuesta = "<div class='respuesta-bot'>❓ Preguntas Frecuentes:\n1. ¿Cómo tramitar licencias médicas?\n2. ¿Dónde postular a ayudantías?\n3. ¿Puedo cambiar de sede?</div>";
      } else if (opcion === "3") {
        respuesta = "<div class='respuesta-bot'>🔧 Otros temas:\n- Buses de acercamiento\n- Servicio médico estudiantil\n- Adaptación académica</div>";
      } else if (opcion === "4") {
        respuesta = "<div class='respuesta-bot'>🚪 Chat finalizado. ¡Gracias por usar el asistente!</div>";
      } else {
        respuesta = "<div class='respuesta-bot'>⚠️ Opción inválida. Inténtalo de nuevo.</div>";
      }

      chatbox.innerHTML += respuesta;
      chatbox.scrollTop = chatbox.scrollHeight;
    }

    function responderManual() {
      const input = document.getElementById("userInput");
      responder(input.value.trim());
      input.value = "";
    }
  </script>

</body>
</html>
